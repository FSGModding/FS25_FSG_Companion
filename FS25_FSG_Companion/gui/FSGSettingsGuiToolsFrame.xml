<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<GUI name="FSGSettingsGuiTools">

    <GuiElement type="empty" profile="uiInGameMenuFrame">

        <GuiElement profile="fs25_menuHeaderPanel">
          <Bitmap profile="fs25_menuHeaderIconBg">
            <Bitmap profile="fs25_menuHeaderIcon" imageSliceId="gui.icon_options_gameSettings2" />
          </Bitmap>
          <Text profile="fs25_menuHeaderTitle" text="$l10n_ui_settings_tools" />
        </GuiElement>
        <ScrollingLayout profile="fs25_settingsLayout" id="companionSettingsLayout" topClipperElementName="topClipper" bottomClipperElementName="bottomClipper">

            <!-- Paint Anywhere Settings Title -->
            <Text profile="fs25_settingsSectionHeader" name="sectionHeader" text="$l10n_ui_settings_paintAnywhere" />

            <!-- Paint Anywhere Option -->
            <Bitmap profile="fs25_multiTextOptionContainer">
              <BinaryOption profile="fs25_settingsBinaryOption" onClick="onClickUpdatePaintAnywhere" id="updatePaintAnywhere">
                <Text profile="fs25_multiTextOptionTooltip" name="ignore" text="$l10n_ui_settings_toolTip_paintAnywhere" />
              </BinaryOption>
              <Text profile="fs25_settingsMultiTextOptionTitle" text="$l10n_ui_settings_paintAnywhere" />
            </Bitmap>

        </ScrollingLayout>
        <Bitmap profile="fs25_settingsTooltipSeparator" />
        <Bitmap profile="fs25_startClipper" name="topClipper" />
        <Bitmap profile="fs25_stopClipper" name="bottomClipper" />

    </GuiElement>


</GUI>